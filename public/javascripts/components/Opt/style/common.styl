// Text
var(--C1-1) = #ffffff; // 默认
var(--C1-2) = rgba(230, 230, 230, 1);
var(--C1-3) = rgba(148, 91, 224, 1);
var(--C1-4) = rgba(153, 153, 153, 1);

// Background
var(--C2-1) = rgba(64, 65, 66, 1); // normal 1
var(--C2-2) = rgba(148, 91, 224, 1);
var(--C2-3) = rgba(64, 65, 66, 1);
var(--C2-4) = #B3B3B3;
var(--C2-5) = rgba(49, 49, 51, 1);
var(--C2-6) = rgba(38, 38, 38, 1);
var(--C2-7) = rgba(153, 153, 153, 1);
var(--C2-8) = rgba(230, 230, 230, 1);
var(--C2-9) = rgba(0, 0, 0, 0.5);
var(--C2-10) = rgba(25, 25, 25, 1);

// Border
var(--C3-1) = rgba(255, 255, 255, 0.3); // normal 1
var(--var(--C3-3)) = rgba(148, 91, 224, 1); // hover & focus
var(--C3-3) = rgba(153, 153, 153, 1);
var(--C3-4) = rgba(64, 65, 66, 1);
var(--C3-5) = rgba(255, 255, 255, 0.2);

// 配置面板组件的公共样式
input {
  width: 100%;
  height: 28px;
  outline: none;
  padding: 0 5px;
  border: 1px solid var(--C3-1);
  background-color: transparent;
  color: var(--C1-2);
}

input::-webkit-outer-spin-button, input::-webkit-inner-spin-button {
  -webkit-appearance: none;
}

input[type=range] {
  appearance: none;
  height: 4px;
  padding: 0px;
  background: transparent;
  margin: 10px 0;
  cursor: pointer;
  border: 1px solid var(--var(--C3-3));
  border-radius: 2px;
}

input[type=range]::-webkit-slider-thumb {
  appearance: none;
  height: 10px;
  width: 10px;
  border-radius: 5px;
  background: var(--C2-8);
}

.top-triangle  {
  width:0;
  height:0;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
  border-bottom: 5px solid var(--C3-3);
  &:hover {
    border-bottom: 5px solid var(--var(--C3-3));
  }
}

.bottom-triangle  {
  width:0;
  height:0;
  border-right: 5px solid transparent;
  border-left: 5px solid transparent;
  border-top: 5px solid var(--C3-3);
  &:hover {
    border-top: 5px solid var(--var(--C3-3));
  }
}
.right-triangle {
  width:0;
  height:0;
  border-top: 5px solid transparent;
  border-bottom: 5px solid transparent;
  border-left: 5px solid var(--C3-3);
  &:hover {
    border-left: 5px solid var(--var(--C3-3));
  }
}